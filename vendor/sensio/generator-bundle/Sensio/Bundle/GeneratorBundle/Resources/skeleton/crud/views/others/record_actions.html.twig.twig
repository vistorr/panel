<li>
    <a href="{{ "{{ path('ctrlw_" ~ route_name_prefix ~ "') }}" }}">
        <button>Cancelar</button>
    </a>
</li>
{% if ('edit' in actions) and (not hide_edit) -%}
    <li>
        <a href="{{ "{{ path('ctrlw_" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
            <button>Editar</button>
        </a>
    </li>
{% endif -%}
    
{% if ('delete' in actions) and (not hide_delete) -%}
    <li>
        <form action="{{ "{{ path('ctrlw_" ~ route_name_prefix ~ "_delete', { 'id': entity.id }) }}" }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ '{{ form_widget(delete_form) }}' }}
            <button class='red' type="submit">Eliminar</button>
        </form>
    </li>
{% endif -%}
{% if not hide_save -%}
    <li>
        <button class='RS-form-save' data-form-id='#ctrlw_{{ route_name_prefix ~ '_update' }}'>Guardar</button>
    </li>
{% endif -%}
