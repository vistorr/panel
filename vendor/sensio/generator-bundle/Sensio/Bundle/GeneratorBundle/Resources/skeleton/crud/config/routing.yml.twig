{% if 'index' in actions %}
ctrlw_{{ route_name_prefix }}:
    pattern:  /pagina/{page}.html
    defaults: { _controller: "{{ bundle }}:{{ entity }}:index", page:1 }
{% endif %}

{% if 'show' in actions %}
ctrlw_{{ route_name_prefix }}_show:
    pattern:  /{id}/show
    defaults: { _controller: "{{ bundle }}:{{ entity }}:show" }
{% endif %}

{% if 'new' in actions %}
ctrlw_{{ route_name_prefix }}_new:
    pattern:  /new
    defaults: { _controller: "{{ bundle }}:{{ entity }}:new" }

ctrlw_{{ route_name_prefix }}_create:
    pattern:  /create
    defaults: { _controller: "{{ bundle }}:{{ entity }}:create" }
    requirements: { _method: post }
{% endif %}

{% if 'edit' in actions %}
ctrlw_{{ route_name_prefix }}_edit:
    pattern:  /{id}/edit
    defaults: { _controller: "{{ bundle }}:{{ entity }}:edit" }

ctrlw_{{ route_name_prefix }}_update:
    pattern:  /{id}/update
    defaults: { _controller: "{{ bundle }}:{{ entity }}:update" }
    requirements: { _method: post|put }
{% endif %}

{% if 'delete' in actions %}
ctrlw_{{ route_name_prefix }}_delete:
    pattern:  /{id}/delete
    defaults: { _controller: "{{ bundle }}:{{ entity }}:delete" }
    requirements: { _method: post|delete }
{% endif %}
