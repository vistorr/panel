{{ "{% extends 'PanelCtrlwBundle::layout.html.twig' %}" }}

{{ "{% form_theme edit_form 'PanelCtrlwBundle:FormTheme:fields.html.twig' %}" }}

{{ "{% block title -%}" }}
{{ "{{ parent() }} - " ~ entity|title ~ "Editar" }}
{{ "{% endblock -%}" }}

{{ "{% block javascripts %}" }}
{{ "    {{ parent() }}" }}
{{ "    {{ form_javascript(edit_form) }}" }}
{{ "{% endblock %}" }}

{{ "{% block sidebar -%}" }}
    {% include 'views/others/sidebar.html.twig.twig' -%}
{{ "{% endblock -%}" }}

{{ "{% block controller_name %}" }}
    {{ entity|title }}
{{ "{% endblock %}" }}

{{ "{% block batch_actions -%}" }}
    <ul>
        {% set hide_edit, hide_delete, hide_save = true, false, false %}
        {% include 'views/others/record_actions.html.twig.twig' -%}
    </ul>
{{ "{% endblock -%}" }}


{{ "{% block body -%}" }}
    <form id='{{ 'ctrlw_' ~ route_name_prefix ~ '_update' }}' action="{{ "{{ path('ctrlw_" ~ route_name_prefix ~ "_update', { 'id': entity.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }}>
        <input type="hidden" name="_method" value="PUT" />
        <fieldset id="sf_fieldset_info_general">
            <h2>Info General</h2>
            {{ "{{ form_widget(edit_form) }}" }}
        </fieldset>
    </form>
{{ "{% endblock -%}" }}
