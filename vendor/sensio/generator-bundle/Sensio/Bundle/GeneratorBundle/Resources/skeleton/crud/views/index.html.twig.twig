{{ "{% extends 'PanelCtrlwBundle::layout.html.twig' %}" }}

{{ "{% block title %}" }}
{{ "{{ parent() }} - " ~ entity|title }}
{{ "{% endblock %}" }}
 

{{ "{% block sidebar %}" }}
    {% include 'views/others/sidebar.html.twig.twig' -%}
{{ "{% endblock %}" }}


{{ "{% block controller_name %}" }}
    {{ entity|title }}
{{ "{% endblock %}" }}

{{ "{% block batch_actions %}" }}
{{    "{% if pager.isPaginable %}" }}
        <ul>
            {{ "{{ paginate(pager,'" ~ route_name_prefix ~ "') }}" }}
        </ul>
{{ "   {% endif %}" }}
{{ "{% endblock %}" }}


{{ "{% block body -%}" }}

<div class="sf_admin_list">
        <table cellspacing="0" class="records_list">
            <thead>
                <tr>
                    {% for field, metadata in fields -%}
                        <th>{{ field|title }}</th>
                    {% endfor -%}
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
{{            "{% for entity in pager.getResults %}" }}
                    <tr class="{{ "{{ cycle(['RS-table-tr-par', 'RS-table-tr-impar'], loop.index) }}" }}">
                        {% for field, metadata in fields -%}
                            {% if loop.first and ('show' in actions) -%}
                                <td><a href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': entity.id }) }}" }}">{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</a></td>
                            {% elseif metadata.type in ['date', 'datetime'] -%}
                                <td>{{ '{% if entity.'~ field|replace({'_': ''}) ~' %}{{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}{% endif%}' }}</td>
                            {% else -%}
                                <td>{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</td>
                            {% endif -%}
                            {% if loop.last -%}
                                <td>
                                    {% include "views/others/actions.html.twig.twig" -%}
                                </td>
                            {% endif -%}
                        {% endfor -%}
                    </tr>
{{            "{% endfor %}" }}
            </tbody>
        </table>
    </div>
{{ "{% endblock %}" }}
