{% extends 'PanelCtrlwBundle::layout.html.twig' %}

{% block title -%}
{{ parent() }} - ClientesVista
{% endblock -%}

{% block sidebar -%}
    <div id="RS-sidebar-actions">
    <ul>
        <li class="RS-button-action sf_admin_action_new"><a href="{{ path('clientes_new') }}">AGREGAR CLIENTES</a></li>                                
        <li class="sf_admin_action_list"><a href="{{ path('clientes') }}">Listado de Clientes</a></li>
    </ul>
</div>{% endblock -%}

{% block controller_name %}
    Clientes
{% endblock %}

{% block batch_actions -%}
    <ul>
                <li>
    <a href="{{ path('clientes') }}">
        <button>Cancelar</button>
    </a>
</li>
<li>
        <a href="{{ path('clientes_edit', { 'id': entity.id }) }}">
            <button>Editar</button>
        </a>
    </li>
<li>
        <form action="{{ path('clientes_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class='red' type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock -%}


{% block body -%}
    <fieldset id="sf_fieldset_info_general">
        <h2>Info General</h2>

        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label  class="required" >Id</label>
                <input type="text" readonly="readonly" value="{{ entity.id }}" />
                </div>
        </div>
        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label  class="required" >Apenom</label>
                <input type="text" readonly="readonly" value="{{ entity.apenom }}" />
                </div>
        </div>
        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label >Cuit</label>
                <input type="text" readonly="readonly" value="{{ entity.cuit }}" />
                </div>
        </div>
        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label  class="required" >Telefono</label>
                <input type="text" readonly="readonly" value="{{ entity.telefono }}" />
                </div>
        </div>
        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label >Direccion</label>
                <input type="text" readonly="readonly" value="{{ entity.direccion }}" />
                </div>
        </div>
        <div class="RS-admin-form-row RS-admin-text">
            <div>
                <label >Email</label>
                <input type="text" readonly="readonly" value="{{ entity.email }}" />
                </div>
        </div>
        </fieldset>
{% endblock -%}
